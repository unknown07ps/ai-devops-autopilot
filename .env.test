# ============================================================
# Deployr Test Environment Variables
# ============================================================
# Copy this to .env.test and customize for testing
# ============================================================

# Database - Use separate test database
DATABASE_URL=postgresql://deployr_test:test_password@localhost:5433/deployr_test
POSTGRES_DB=deployr_test
POSTGRES_USER=deployr_test
POSTGRES_PASSWORD=test_password

# Redis - Use separate test instance
REDIS_URL=redis://localhost:6380

# Security
JWT_SECRET_KEY=test-jwt-secret-key-not-for-production
ALLOWED_ORIGINS=http://localhost:8001,http://127.0.0.1:8001
ALLOWED_HOSTS=localhost,127.0.0.1

# AI/LLM - Use mock or local Ollama
OLLAMA_BASE_URL=http://localhost:11434
USE_MOCK_LLM=true

# Notifications - Disabled for testing
SLACK_WEBHOOK_URL=
SENDGRID_API_KEY=

# Payment - Test mode
RAZORPAY_KEY_ID=rzp_test_placeholder
RAZORPAY_KEY_SECRET=test_secret

# Environment
ENVIRONMENT=test
LOG_LEVEL=DEBUG
DRY_RUN_MODE=true

# Test Configuration
TEST_USER_EMAIL=test@deployr.test
TEST_USER_PASSWORD=TestPassword123!
TEST_API_BASE_URL=http://localhost:8001
