{
    "info": {
        "name": "Deployr API Tests",
        "_postman_id": "deployr-api-tests-collection",
        "description": "Comprehensive API tests for Deployr AI DevOps Autopilot",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:8001",
            "type": "string"
        },
        {
            "key": "accessToken",
            "value": "",
            "type": "string"
        },
        {
            "key": "testEmail",
            "value": "test@deployr.test",
            "type": "string"
        },
        {
            "key": "testPassword",
            "value": "TestPassword123!",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "Health Check",
            "item": [
                {
                    "name": "GET /health",
                    "request": {
                        "method": "GET",
                        "url": "{{baseUrl}}/health"
                    },
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "pm.test('Status code is 200', function() {",
                                    "    pm.response.to.have.status(200);",
                                    "});",
                                    "",
                                    "pm.test('Response has status field', function() {",
                                    "    var jsonData = pm.response.json();",
                                    "    pm.expect(jsonData).to.have.property('status');",
                                    "});"
                                ]
                            }
                        }
                    ]
                }
            ]
        },
        {
            "name": "Authentication",
            "item": [
                {
                    "name": "POST /api/auth/register - New User",
                    "request": {
                        "method": "POST",
                        "url": "{{baseUrl}}/api/auth/register",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"{{testEmail}}\",\n  \"password\": \"{{testPassword}}\",\n  \"full_name\": \"Test User\"\n}"
                        }
                    },
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "// May fail if user exists - that's OK",
                                    "pm.test('Registration response', function() {",
                                    "    pm.expect(pm.response.code).to.be.oneOf([200, 201, 400]);",
                                    "});"
                                ]
                            }
                        }
                    ]
                },
                {
                    "name": "POST /api/auth/login",
                    "request": {
                        "method": "POST",
                        "url": "{{baseUrl}}/api/auth/login",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"{{testEmail}}\",\n  \"password\": \"{{testPassword}}\"\n}"
                        }
                    },
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "pm.test('Status code is 200', function() {",
                                    "    pm.response.to.have.status(200);",
                                    "});",
                                    "",
                                    "pm.test('Response has access_token', function() {",
                                    "    var jsonData = pm.response.json();",
                                    "    pm.expect(jsonData).to.have.property('access_token');",
                                    "    pm.collectionVariables.set('accessToken', jsonData.access_token);",
                                    "});"
                                ]
                            }
                        }
                    ]
                },
                {
                    "name": "GET /api/auth/me - Get Profile",
                    "request": {
                        "method": "GET",
                        "url": "{{baseUrl}}/api/auth/me",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{accessToken}}"
                            }
                        ]
                    },
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "pm.test('Status code is 200', function() {",
                                    "    pm.response.to.have.status(200);",
                                    "});",
                                    "",
                                    "pm.test('Response has email', function() {",
                                    "    var jsonData = pm.response.json();",
                                    "    pm.expect(jsonData).to.have.property('email');",
                                    "});"
                                ]
                            }
                        }
                    ]
                },
                {
                    "name": "GET /api/auth/me - Without Token (Unauthorized)",
                    "request": {
                        "method": "GET",
                        "url": "{{baseUrl}}/api/auth/me"
                    },
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "pm.test('Status code is 401', function() {",
                                    "    pm.response.to.have.status(401);",
                                    "});"
                                ]
                            }
                        }
                    ]
                }
            ]
        },
        {
            "name": "Dashboard API",
            "item": [
                {
                    "name": "GET /api/dashboard/stats",
                    "request": {
                        "method": "GET",
                        "url": "{{baseUrl}}/api/dashboard/stats",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{accessToken}}"
                            }
                        ]
                    },
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "pm.test('Status code is 200 or 403', function() {",
                                    "    pm.expect(pm.response.code).to.be.oneOf([200, 403]);",
                                    "});"
                                ]
                            }
                        }
                    ]
                },
                {
                    "name": "GET /api/dashboard/incidents",
                    "request": {
                        "method": "GET",
                        "url": "{{baseUrl}}/api/dashboard/incidents",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{accessToken}}"
                            }
                        ]
                    },
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "pm.test('Response is array or error', function() {",
                                    "    if (pm.response.code === 200) {",
                                    "        var jsonData = pm.response.json();",
                                    "        pm.expect(jsonData).to.be.an('array');",
                                    "    }",
                                    "});"
                                ]
                            }
                        }
                    ]
                }
            ]
        },
        {
            "name": "Subscription API",
            "item": [
                {
                    "name": "GET /api/subscription/plans",
                    "request": {
                        "method": "GET",
                        "url": "{{baseUrl}}/api/subscription/plans"
                    },
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "pm.test('Status code is 200', function() {",
                                    "    pm.response.to.have.status(200);",
                                    "});",
                                    "",
                                    "pm.test('Response has plans', function() {",
                                    "    var jsonData = pm.response.json();",
                                    "    pm.expect(jsonData).to.be.an('array');",
                                    "});"
                                ]
                            }
                        }
                    ]
                },
                {
                    "name": "GET /api/subscription/current",
                    "request": {
                        "method": "GET",
                        "url": "{{baseUrl}}/api/subscription/current",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{accessToken}}"
                            }
                        ]
                    },
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "pm.test('Status code is 200 or 404', function() {",
                                    "    pm.expect(pm.response.code).to.be.oneOf([200, 404]);",
                                    "});"
                                ]
                            }
                        }
                    ]
                }
            ]
        },
        {
            "name": "Suppression Rules API",
            "item": [
                {
                    "name": "GET /api/suppression/rules",
                    "request": {
                        "method": "GET",
                        "url": "{{baseUrl}}/api/suppression/rules",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{accessToken}}"
                            }
                        ]
                    },
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "pm.test('Status code is 200', function() {",
                                    "    pm.response.to.have.status(200);",
                                    "});",
                                    "",
                                    "pm.test('Response is array of rules', function() {",
                                    "    var jsonData = pm.response.json();",
                                    "    pm.expect(jsonData).to.be.an('array');",
                                    "});"
                                ]
                            }
                        }
                    ]
                },
                {
                    "name": "POST /api/suppression/rules/rule_duplicate/toggle",
                    "request": {
                        "method": "POST",
                        "url": "{{baseUrl}}/api/suppression/rules/rule_duplicate/toggle",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{accessToken}}"
                            }
                        ]
                    },
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "pm.test('Toggle response', function() {",
                                    "    pm.expect(pm.response.code).to.be.oneOf([200, 404]);",
                                    "});"
                                ]
                            }
                        }
                    ]
                }
            ]
        },
        {
            "name": "Security Tests",
            "item": [
                {
                    "name": "SQL Injection Test - Login",
                    "request": {
                        "method": "POST",
                        "url": "{{baseUrl}}/api/auth/login",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"' OR '1'='1\",\n  \"password\": \"' OR '1'='1\"\n}"
                        }
                    },
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "pm.test('SQL injection blocked', function() {",
                                    "    pm.expect(pm.response.code).to.be.oneOf([400, 401, 422]);",
                                    "});"
                                ]
                            }
                        }
                    ]
                },
                {
                    "name": "XSS Test - Register",
                    "request": {
                        "method": "POST",
                        "url": "{{baseUrl}}/api/auth/register",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"<script>alert('xss')</script>@test.com\",\n  \"password\": \"Test123!\",\n  \"full_name\": \"<script>alert('xss')</script>\"\n}"
                        }
                    },
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "pm.test('XSS blocked or sanitized', function() {",
                                    "    pm.expect(pm.response.code).to.be.oneOf([400, 422]);",
                                    "});"
                                ]
                            }
                        }
                    ]
                },
                {
                    "name": "Rate Limit Test",
                    "request": {
                        "method": "GET",
                        "url": "{{baseUrl}}/health"
                    },
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "// Run this multiple times rapidly to test rate limiting",
                                    "pm.test('Response received', function() {",
                                    "    pm.expect(pm.response.code).to.be.oneOf([200, 429]);",
                                    "});"
                                ]
                            }
                        }
                    ]
                }
            ]
        },
        {
            "name": "Ingestion API",
            "item": [
                {
                    "name": "POST /ingest/metrics",
                    "request": {
                        "method": "POST",
                        "url": "{{baseUrl}}/ingest/metrics",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{accessToken}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"timestamp\": \"2026-01-08T10:00:00Z\",\n  \"metric_name\": \"api_latency_ms\",\n  \"value\": 150.0,\n  \"labels\": {\n    \"service\": \"test-api\",\n    \"environment\": \"test\"\n  }\n}"
                        }
                    },
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "pm.test('Metric ingested', function() {",
                                    "    pm.expect(pm.response.code).to.be.oneOf([200, 201, 202]);",
                                    "});"
                                ]
                            }
                        }
                    ]
                },
                {
                    "name": "POST /ingest/logs",
                    "request": {
                        "method": "POST",
                        "url": "{{baseUrl}}/ingest/logs",
