# ============================================================================
# AI DevOps Autopilot - Environment Variables Template
# ============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control
# ============================================================================

# ============================================================================
# REQUIRED VARIABLES
# ============================================================================

# PostgreSQL Database Connection
# Example: postgresql://user:password@localhost:5432/deployr
DATABASE_URL=

# JWT Authentication Secret (generate with: python -c "import secrets; print(secrets.token_urlsafe(32))")
JWT_SECRET_KEY=

# Redis Connection
# Example: redis://localhost:6379
REDIS_URL=redis://localhost:6379

# Cloud Credential Encryption Key (generate with: python -c "import secrets; print(secrets.token_urlsafe(32))")
CLOUD_CREDENTIAL_KEY=

# ============================================================================
# PAYMENT INTEGRATION (Required for subscription features)
# ============================================================================

# Razorpay API Credentials
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=
RAZORPAY_WEBHOOK_SECRET=

# Razorpay Plan IDs (Optional - defaults provided)
# RAZORPAY_PRO_MONTHLY_PLAN_ID=plan_PRO_MONTHLY
# RAZORPAY_PRO_YEARLY_PLAN_ID=plan_PRO_YEARLY
# RAZORPAY_ENTERPRISE_MONTHLY_PLAN_ID=plan_ENT_MONTHLY

# Application URL for callbacks
APP_URL=http://localhost:8000

# ============================================================================
# AI/LLM CONFIGURATION
# ============================================================================

# Ollama Local LLM (for incident analysis)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b

# ============================================================================
# NOTIFICATIONS
# ============================================================================

# Slack Webhook URL for alerts
SLACK_WEBHOOK_URL=

# SendGrid Email (for trial expiry reminders)
SENDGRID_API_KEY=
FROM_EMAIL=

# ============================================================================
# AUTONOMOUS EXECUTION SETTINGS
# ============================================================================

# Enable autonomous mode (true/false)
AUTONOMOUS_MODE=false

# Execution mode: supervised, semi_autonomous, fully_autonomous
EXECUTION_MODE=supervised

# Dry run mode - prevents actual changes (true/false)
DRY_RUN_MODE=true

# Auto-approve low risk actions (true/false)
AUTO_APPROVE_LOW_RISK=false

# Enable learning from outcomes (true/false)
LEARNING_ENABLED=true

# Incident alert cooldown in seconds
INCIDENT_COOLDOWN=300

# ============================================================================
# RATE LIMITING
# ============================================================================

# API rate limits
API_RATE_LIMIT=100/minute
API_BURST_LIMIT=20/second

# ============================================================================
# SECURITY THRESHOLDS
# ============================================================================

# Failed login limits
MAX_FAILED_LOGINS_IP=5
MAX_FAILED_LOGINS_USER=3

# Request limits
MAX_REQUESTS_MINUTE=100
MAX_AUTH_HOUR=20

# Session limits
MAX_SESSIONS=5

# Lockout settings
LOCKOUT_MINUTES=30
AUTO_LOCKOUT=true

# ============================================================================
# CLOUD PROVIDER INTEGRATIONS (Optional)
# ============================================================================

# AWS Credentials (or use AWS CLI profile/IAM role)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_DEFAULT_REGION=us-east-1

# Google Cloud
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# Azure
# AZURE_SUBSCRIPTION_ID=
# AZURE_TENANT_ID=
# AZURE_CLIENT_ID=
# AZURE_CLIENT_SECRET=

# ============================================================================
# KUBERNETES (Optional)
# ============================================================================

# Kubeconfig path (defaults to ~/.kube/config)
# KUBECONFIG=/path/to/kubeconfig
